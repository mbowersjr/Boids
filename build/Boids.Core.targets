<Project> 
  <PropertyGroup>
    <_NativeRuntime Condition=" '$(_NativeRuntime)' == '' And ('$(Prefer32Bit)' == 'true' Or '$(PlatformTarget)' == 'x86')">x86</_NativeRuntime>
    <_NativeRuntime Condition=" '$(_NativeRuntime)' == '' And ('$(Prefer32Bit)' == 'false' Or '$(PlatformTarget)' == 'x64')">x64</_NativeRuntime>
    <_NativeLibName Condition=" '$(_NativeRuntime)' != ''">$(MSBuildThisFileDirectory)\..\lib\native\$(_NativeRuntime)\*.dll</_NativeLibName>
  </PropertyGroup>
  
  <ItemGroup>
    <Content Include="$(_NativeLibName)">
      <Link>%(Filename)%(Extension)</Link>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <Visible>False</Visible>
    </Content>
  </ItemGroup>
</Project>
