{
    "Boids": {
        "Count": 50,
        
        "DisplayBoidProperties": false,
        "DisplayDebugData": true,
        
        "Limits": {
            "MaxVelocity": 10,
            "SpawnVelocity": { "Min": 3, "Max": 10 },
            "MaxForce": 10
        },
        
        "Behaviors": [
            { "Name": "Avoidance", 
                "Enabled": true, "Coefficient": 2.0, "Radius": 50 },
            { "Name": "AvoidPoints", 
                "Enabled": true, "Coefficient": 15.0, "Radius": 100 },
            { "Name": "Alignment", 
                "Enabled": true, "Coefficient": 1.0, "Radius": 75 },
            { "Name": "Cohesion", 
                "Enabled": true, "Coefficient": 1.5, "Radius": 300 }
        ],
        
        "AvoidedPointsDisplay": {
            "NearestPoints": true,
            "HighlightActivePoints": true
        },
        
        "PartitionGrid": {
            "CellsX": 32,
            "CellsY": 24,
            "Visible": true,
            "LinesVisible": true,
            "HighlightActiveCells": false
        },

        "Graphics": {
            "Resolution": { "X": 1600, "Y": 960, "Scale": 0.75 },            
            "VSync": false
        },

        "Theme": {
            "Background": "#F5F5F5,1.0",
            "PartitionGridLine": "#1E90FF,1.0",
            "PartitionGridHighlight": "#4169E1,0.75",
            "AvoidedPointLine": "#FFA500,0.3",
            "AvoidedPointActiveLine": "#FFA500,1.0",
            "Boid": "#333333,1.0",
            "BoidDirectionLine": "#CC0000,1.0",
            "BoidPropertiesText": "#000000,0.75"
        }
    },

    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Warning"
        },
        "Console": {
            "FormatterOptions": {
                "IncludeScopes": true
            },
            "LogLevel": {
                "Default": "Debug"
            }
        },
        "Debug": {
            "LogLevel": {
                "Default": "Debug"
            }
        }
    }
}
