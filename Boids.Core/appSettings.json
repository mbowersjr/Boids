{
    "Boids": {
        "Count": 5,
        "BoidRadius": 16,
        "DisplayDistanceReferenceCircles": true,
        "DisplayBoidProperties": true,
        "DisplayDebugData": true,
        
        "Limits": {
            "SpawnVelocity": { "Min": 1, "Max": 5 },
            "MaxVelocity": 10,
            "MaxForce": 0.05,
            "ArrivalDistance": 100
        },
        
        "Behaviors": [
            { "Name": "Avoidance",   "Enabled": true, "Radius": 25 },
            { "Name": "AvoidPoints", "Enabled": false, "Radius": 100 },
            { "Name": "Alignment",   "Enabled": false, "Radius": 50 },
            { "Name": "Cohesion",    "Enabled": false, "Radius": 50 }
        ],
        
        "AvoidedPointsDisplay": {
            "NearestPoints": true,
            "HighlightActivePoints": true
        },
        
        "PartitionGrid": {
            "CellsX": 32,
            "CellsY": 24,
            "Visible": true,
            "LinesVisible": true,
            "HighlightActiveCells": false
        },

        "Graphics": {
            "Resolution": { "X": 1600, "Y": 960, "Scale": 1.0 },
            "VSync": false
        },

        "Theme": {
            "Background": "#F5F5F5,1.0",
            "PartitionGridLine": "#1E90FF,1.0",
            "PartitionGridHighlight": "#4169E1,0.75",
            "AvoidedPointLine": "#FFA500,0.3",
            "AvoidedPointActiveLine": "#FFA500,1.0",
            "Boid": "#333333,1.0",
            "BoidDirectionLine": "#CC0000,1.0",
            "BoidPropertiesText": "#000000,0.75"
        }
    },

    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Warning"
        }
    }
}
